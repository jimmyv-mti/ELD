<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置框内填充颜色 -->
    <solid android:color="#FFFFFF" />
    <!-- 设置圆角半径 -->
    <corners android:radius="5dp"/>
    <!-- 设置边框宽度和颜色 -->
    <stroke android:width="1dp" android:color="#BDC7D8"/>
    <!-- 设置边距 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>